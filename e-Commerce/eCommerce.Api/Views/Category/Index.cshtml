@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Category Management";
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Category Management</h2>

<a asp-action="Create" class="btn btn-primary">Add New Category</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int count = 1;
            foreach (var category in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                    </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No categories found.</td>
            </tr>
        }
    </tbody>
</table>
